            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "option": {
                  "type": "string"
                },
                "endpoint": {
                  "type": "boolean"
                },
                "barriers": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              },
              "required": ["option", "endpoint"]
            }
          }
        }
      }
    }
  }
