              "properties": {
                "prompt": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "header": {
                        "type": "string"
                      },
                      "body": {
                        "type": "string"
                      },
                      "image": {
                        "type": "string"
                      },
                      "caption": {
                        "type": "string"
                      }
                    }
                  }
                },
                "dimension": {
                  "type": "string",
                  "enum": [
                    "none",
                    "length",
                    "illuminance",
                    "slope"
                  ],
                  "default": "length"
                },
                "precision": {
                  "type": "integer",
                  "default": 2,
                  "minimum": 0
                },
                "arSync": {
                  "type": "string",
                  "enum": [
                    "distance",
                    "length",
                    "width",
                    "illuminance",
                    "slope"
                  ]
                },
                "threshold": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "upper": {
                        "type": "number",
                        "minimum": 0
                      },
                      "lower": {
                        "type": "number"
                      },
                      "includeUpper": {
                        "type": "boolean"
                      },
                      "includeLower": {
                        "type": "boolean"
                      },
                      "ifTrue": {
                        "type": "object",
                        "properties": {
                          "option": {
                            "type": "string",
                            "default": "If True"
                          },
                          "endpoint": {
                            "type": "boolean"
                          },
                          "barriers": {
                            "type": "array",
                            "items": {
                              "type": "string"
                            }
                          }
                        }
                      },
                      "ifFalse": {
                        "type": "object",
                        "properties": {
                          "option": {
                            "type": "string",
                            "default": "If False"
                          },
                          "endpoint": {
                            "type": "boolean"
                          },
                          "barriers": {
                            "type": "array",
                            "items": {
                              "type": "string"
                            }
                          }
                        }
                      }
                    },
                    "required": ["upper", "lower"]
