                  "Illumination",
                  "Legroom",
                  "MNVR_Circle",
                  "MNVR_Kitchen",
                  "MNVR_Sliding",
                  "MNVR_Swing",
                  "Slope",
                  "Stairs",
                  "ToiletPaper",
                  "VDis_1S",
                  "VDis_2P",
                  "VDis_2S",
